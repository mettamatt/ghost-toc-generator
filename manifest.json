{
  "manifest_version": 3,
  "name": "Ghost ToC Generator",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html"
}